# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

def common_pods
  pod 'Swinject', '~> 2.5.0'
  pod 'SwiftLint', '~> 0.29.0'
end

target 'Debug' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  # use_frameworks!

  # Pods for Debug
  common_pods
end

target 'Production' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  # use_frameworks!

  # Pods for Production
  common_pods
end
